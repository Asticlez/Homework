// This is your Prisma schema file

datasource db {
  provider = "sqlite"  // Using SQLite as an example
  url      = env("DATABASE_URL")  // Pulling from .env file
}

generator client {
  provider = "prisma-client-js"
}

model Guitar {
  id       Int     @id @default(autoincrement())  // Use autoincremented Int ID
  name     String
  brand    String
  price    Float
  imageUrl String
}

